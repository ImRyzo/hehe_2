<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Daftar Barang</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('../partials/__head') %>
    <div class="container">
        <% if (messages.success) { %>
            <div class="alert alert-info" role="alert">
                <%- messages.success %>    
            </div>
        <% } %>
        <% if (messages.error) { %>
            <div class="alert alert-danger" role="alert">
                <%- messages.error %>    
            </div>
        <% } %>
        <div class="mb-2">
            <a href="/barang/create" class="btn btn-sm btn-success">Tambah</a>
        </div>
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Nama Barang</th>
                        <th scope="col">Kode Barang</th>
                        <th scope="col">Merk dan Spesifikasi</th>
                        <th scope="col">Tahun Perolehan</th>
                        <th scope="col">Sumber Perolehan</th>
                        <th scope="col">Jumlah</th>
                        <th scope="col">Kondisi</th>
                        <th scope="col">ID Penyimpanan</th>
                        <th scope="col">Aksi</th>
                    </tr>
                </thead>
                <tbody>
                    <% for(let i = 0; i < data.length; i++) { %>
                        <tr>
                            <th scope="row"><%= (i+1) %></th>
                            <td><%= data[i].nama_barang %></td>
                            <td><%= data[i].kode_barang %></td>
                            <td><%= data[i].merk_spesifikasi_barang %></td>
                            <td><%= data[i].tahun_perolehan_barang.toISOString().split('T')[0] %></td>
                            <td><%= data[i].sumber_perolehan_barang %></td>
                            <td><%= data[i].jumlah_perolehan_barang %></td>
                            <td><%= data[i].kondisi_perolehan_barang %></td>
                            <td><%= data[i].nama_penyimpanan %></td>
                            <td>
                                <div class="btn-group" role="group" aria-label="Basic example">
                                    <a href="/barang/edit/<%= data[i].id_barang %>" class="btn btn-sm btn-warning me-1">Edit</a>
                                    <button type="button" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal<%= data[i].id_barang %>">Delete</button>
                                </div>
                                <div class="modal fade" id="deleteModal<%= data[i].id_barang %>" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header">
                                                <h5 class="modal-title" id="deleteModalLabel">Konfirmasi Hapus</h5>
                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                            </div>
                                            <div class="modal-body">
                                                Apakah Anda yakin ingin menghapus barang ini?
                                            </div>
                                            <div class="modal-footer">
                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Batal</button>
                                                <a href="/barang/delete/<%= data[i].id_barang %>" class="btn btn-danger">Hapus</a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>
    <%- include('../partials/__foot.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
