<!DOCTYPE html>
<html lang="id">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Tambah Barang</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <%- include('../partials/__head') %>
    <div class="container">
        <h1 class="text-center mb-5">Tambah Barang</h1>
        <form action="/barang/store" method="POST">
            <div class="mb-3">
                <label for="nama_barang" class="form-label">Nama Barang:</label>
                <input type="text" class="form-control" name="nama_barang" id="nama_barang" placeholder="Nama Barang" required>
            </div>
            <div class="mb-3">
                <label for="kode_barang" class="form-label">Kode Barang:</label>
                <input type="text" class="form-control" name="kode_barang" id="kode_barang" placeholder="Kode Barang" required>
            </div>
            <div class="mb-3">
                <label for="merk_spesifikasi_barang" class="form-label">Merk dan Spesifikasi:</label>
                <textarea class="form-control" name="merk_spesifikasi_barang" id="merk_spesifikasi_barang" rows="3" required></textarea>
            </div>
            <div class="mb-3">
                <label for="tahun_perolehan_barang" class="form-label">Tahun Perolehan:</label>
                <input type="date" class="form-control" name="tahun_perolehan_barang" id="tahun_perolehan_barang" required>
            </div>
            <div class="mb-3">
                <label for="sumber_perolehan_barang" class="form-label">Sumber Perolehan:</label>
                <input type="text" class="form-control" name="sumber_perolehan_barang" id="sumber_perolehan_barang" placeholder="Sumber Perolehan" required>
            </div>
            <div class="mb-3">
                <label for="jumlah_perolehan_barang" class="form-label">Jumlah:</label>
                <input type="number" class="form-control" name="jumlah_perolehan_barang" id="jumlah_perolehan_barang" placeholder="Jumlah" required>
            </div>
            <div class="mb-3">
                <label for="kondisi_perolehan_barang" class="form-label">Kondisi:</label>
                <input type="text" class="form-control" name="kondisi_perolehan_barang" id="kondisi_perolehan_barang" placeholder="Kondisi" required>
            </div>
            <div class="mb-3">
                <label for="id_penyimpanan" class="form-label">ID Penyimpanan:</label>
                <select class="form-select" name="id_penyimpanan" id="id_penyimpanan" required>
                    <option selected>Pilih ID Penyimpanan</option>
                    <% data.forEach(penyimpanan => { %>
                        <option value="<%= penyimpanan.id_penyimpanan %>"><%= penyimpanan.nama_penyimpanan %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-3">
                <button type="submit" class="btn btn-success">Simpan</button>
            </div>
        </form>
    </div>
    <%- include('../partials/__foot.ejs') %>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
